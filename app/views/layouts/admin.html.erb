<!DOCTYPE html>
<html>
<head>
  <title>Stevelehman ADMIN</title>
  <%= stylesheet_link_tag    "admin/styles", :media => "all" %>
  <%= javascript_include_tag "admin/admin" %>
  <%= csrf_meta_tags %>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/assets/bootstrap-responsive.css" rel="stylesheet">
</head>
<body>
	<div class="navbar">
	  <div class="navbar-inner">
	    <div class="container">
	      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </a>
	      <a class="brand" href="#">Steve Lehman</a>
			<div class="nav-collapse">
				<% if user_signed_in? %>
				
				<ul class="nav">
					<li class="divider-vertical"></li>
					<li><%= link_to 'Scholarship', admin_articles_path %></li>
					<li><%= link_to 'Posts', admin_posts_path %></li>
					<li><%= link_to 'Projects', admin_projects_path %></li>
					<li><%= link_to 'Events', admin_events_path %></li>
					<li><%= link_to 'Press', admin_quotes_path %></li>
					<li><%= link_to 'Videos', admin_videos_path %></li>
					<li><%= link_to 'Albums', admin_albums_path %></li>
					<li class="divider-vertical"></li>
					<li><%= link_to 'Bio', admin_pages_path %></li>
					
					<li class="divider-vertical"></li>
					<li class="dropdown">
						<a class="dropdown-toggle" data-toggle="dropdown" href="#">Files<b class="caret"></b></a>
						<ul class="dropdown-menu">
							<li><%= link_to 'Photos', admin_photos_path %></li>
							<li><%= link_to 'Documents', admin_documents_path %></li>
							<li><%= link_to 'Tracks', admin_tracks_path %></li>
						</ul>
					</li>
					
					<li>
						<%= link_to("Logout", destroy_user_session_path, :method => :delete) %>
					</li>
					
					
					
				</ul>
				
				<% end %>
	      
		</div>
	    </div>
	  </div>
	</div>
	
	
	<div class="container">
		<% flash.each do |name, msg| %>
		    <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
		      <%= msg  %>
		    </div>
		  <% end %>
		<div class="row">
			<div class="span12">
				<%= yield %>
			</div>
			
		</div>
		
	</div>
	<%= yield :body_js %>
</body>
</html>
