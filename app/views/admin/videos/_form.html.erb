<%= simple_nested_form_for [:admin, @video], :html => { :class => 'form-vertical' } do |f| %>
	<%= f.input :display %>
	<%= f.input :title,  placeholder: 'Enter title', input_html: { class: 'input-xxlarge'} %>
	<%= f.input :description,  placeholder: 'Enter description', input_html: { class: 'input-xxlarge', rows: '5'} %>
	<%= f.input :service,  placeholder: 'Enter service' %>
	<%= f.input :url,  placeholder: 'Enter URL' %>
	<%= f.input :embed,  placeholder: 'Enter embed' %>

	
	<div class="form-actions">
		<%= f.button :submit, nil, class: 'btn btn-primary' %>
		<%= link_to 'Cancel', admin_videos_path, :class => 'btn' %>
	</div>
<% end %>
