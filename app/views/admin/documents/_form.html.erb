<%= simple_form_for [:admin, @document], :html => { :class => 'form-vertical' } do |f| %>

	<p>
		<%= link_to @document.pdf_url %>
	</p>
	<%= f.input :title %>
	<div class="form-actions">
		<%= f.button :submit, nil, class: 'btn btn-primary' %>
		<%= link_to 'Cancel', admin_documents_path, :class => 'btn' %>
	</div>
<% end %>
