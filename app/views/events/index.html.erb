<div id="page-image">
	<img src="/assets/fieldwork.jpg"/>
</div>

<section id="main">
	
	
	<% @events.each do |event| %>
	<article class="post event">
		<div class="row">
			<div class="span2">
				<div class="date"><%= format_date(event.date) %></div>
				<div class="date"><%= event.time_string %></div>
			</div>
			<div class="span6">
				<h4><%= link_to "#{event.title} @ #{event.venue}, #{event.location}", event_path(event) %></h4>
				<p><%= event.body %></p>
			</div>
			<div class="span1">
				<%= link_to('Tickets', event.url, class: 'more event-more', target: '_blank') if event.url? %>
			</div>
		</div>
	</article>
	<% end %>
</section>

