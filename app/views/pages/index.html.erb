<div id="home">
	<div class="container">
		<div class="row">
			<div class="span12">
				<div class="row">
					<div class="span7">
						<div class="home-content">
							<div id="quotes">
								<p class="lead quote">
									<a href="<%= press_url %>">
									&ldquo;One of the transforming figures of early 21st century jazz&rdquo;
									</a>
								</p>
								<p class="source"><i>&mdash;The Guardian</i></p>
							</div>

							<h4>Latest News:</h4>
							<ul class="unstyled">
							<% for post in @posts %>
								<li>
									<%= format_date(post.created_at) %>: 
									<%= link_to post.excerpt, post_path(post)%>
								</li>
							<% end %>
							</ul>
							<a href="<%= posts_path %>" class="more read-more"><i class="icon-plus icon-white"></i></a>
							<h4>Upcoming Events:</h4>
							<ul class="unstyled">
							<% for event in @events %>
								<li>
									<%= format_date(event.date) %>: 
									<%= link_to "#{event.title} in #{event.location}", event_path(event) %>
								</li>
							<% end %>
							</ul>
							<a href="<%= events_path %>" class="more read-more"><i class="icon-plus icon-white"></i></a>
							
						</div>
						
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
